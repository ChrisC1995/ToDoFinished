<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.campbellapps.christiancampbell.todolist2.userInput"
    android:background="#e4e0c0">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_input_title"
        android:hint="Enter a title here"
        android:gravity="center"
        android:textSize="30sp"



        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_input_month"
        android:hint="MM"
        android:layout_below="@+id/user_input_title"
        android:layout_alignParentLeft="true"
        android:inputType="number"
        android:maxLength="2"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_input_day"
        android:hint="DD"
        android:layout_below="@+id/user_input_title"
        android:layout_centerInParent="true"
        android:inputType="number"
        android:maxLength="2"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_input_time"
        android:hint="24:00"
        android:layout_below="@+id/user_input_title"
        android:layout_alignParentRight="true"
        android:inputType="time"
        android:maxLength="5"
        />
    <EditText
        android:id="@+id/user_input_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_input_day"
        android:hint="Fill in some info about your objective?"
        android:gravity="center"
        />


    <EditText
        android:id="@+id/user_input_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Add A Category"
        android:layout_above="@+id/user_input_save"
        android:layout_centerInParent="true"
        android:gravity="center"
        />

    <Button
        android:id="@+id/user_input_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#052151"
        android:textColor="@android:color/background_light"
        android:layout_alignParentEnd="true"
        />

    <Button
        android:id="@+id/user_input_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add An Image"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="#052151"
        android:textColor="#FFFF"

        />
    <ImageView
        android:id="@+id/imageView_input"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/user_input_info"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"

        />

</RelativeLayout>
